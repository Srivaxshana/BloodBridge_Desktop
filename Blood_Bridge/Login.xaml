<Window x:Class="Blood_Bridge.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blood_Bridge"
        mc:Ignorable="d"
        Title="Login" Height="280" Width="300" 
        ResizeMode="NoResize"
       
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="  Welcome to Login Page" FontSize="20" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="40" Width="240"/>
        <Label Content="User Name:" FontSize="20" HorizontalAlignment="Left" Height="45" FontWeight="Bold" VerticalAlignment="Top" Width="148" Margin="63,40,0,0" RenderTransformOrigin="0.525,-0.59"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Center" Margin="0,85,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" Height="30" RenderTransformOrigin="0.51,-1.1"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Height="45"  FontWeight="Bold" VerticalAlignment="Top" Width="148" Margin="63,115,0,0"/>
        <PasswordBox x:Name="txtPassword"  HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="174" Height="30"/>
        <Button Content="Cancel" FontSize="20" Foreground="White" Background="red" HorizontalAlignment="Left" Margin="63,195,0,0" VerticalAlignment="Top" Height="38" Width="74" Click="close"/>
        <Button Content="Login" FontSize="20" Foreground="White" Background="red" HorizontalAlignment="Left" Margin="163,196,0,0" VerticalAlignment="Top" Height="37" Width="74" Click="login"/>
    </Grid>

</Window>
