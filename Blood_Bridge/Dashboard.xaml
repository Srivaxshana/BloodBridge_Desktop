<Window x:Class="Blood_Bridge.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blood_Bridge"
        mc:Ignorable="d"
        Title="Dashboard" 
        Height="550" Width="880"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>



        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal"
                        Background="#FFE64C4C"
                        Height="101" Width="890">


                <Image Source="C:\Users\MY PC\OneDrive\Documents\GitHub\BloodBridge_Desktop\BloodBridge_Desktop\Blood_Bridge\Images\logo.png"
                     Width="99"
                     Height="93"
                     Margin="05"/>
                <Label  Margin="100 5 5 5" FontSize="40"  FontWeight="Bold" Foreground="white" Width="313" Height="67">BloodBridge</Label>

            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical"
                    Height="Auto">

                    <Button Padding="20 20"
                     Margin="20 35 20 20"
                     FontSize="20"  
                     Background="#FFE64C4C"
                     Foreground="white">Dashboard</Button>
                    <StackPanel>
                        <Button Padding="20 20"
                     Margin="20 20"
                     FontSize="20"  
                     Background="#FFE64C4C"
                     Foreground="white" Click="Donar" Content="Donar"/>


                        <Popup x:Name="OptionPopup" Placement="Center"
                         PlacementTarget="{Binding ElementName=Donar}" StaysOpen="False" Margin="20 20 20 20">
                            <Border Background="LightGray" Padding="0" CornerRadius="5" >
                                <StackPanel>
                                    <Button Content="Edit Donar"  FontSize="15"  
                                        Background="#FFE64C4C"
                                        Foreground="white" Width="150"   Click="Edit"/>
                                    <Button Content="All Donars" FontSize="15"  
                                        Background="#FFE64C4C"
                                        Foreground="white"  Width="150" Click="AllDonarDetails"/>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </StackPanel>

                    <Button Padding="20 20"
                     Margin="20 20"
                     FontSize="20"  
                     Background="#FFE64C4C"
                     Foreground="white" Click="Blood">Blood Details</Button>

                    <Button Padding="20 20"
                     Margin="20 20"
                     FontSize="20"  
                     Background="#FFE64C4C"
                     Foreground="white" Click="Logout">Log out</Button>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                Height="Auto">
                    <Image Source="C:\Users\MY PC\OneDrive\Documents\GitHub\BloodBridge_Desktop\BloodBridge_Desktop\Blood_Bridge\Images\Background.jpg" Height="431" Width="690"  />

                </StackPanel>

            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
